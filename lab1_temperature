package lab1a;

import java.util.Scanner;

public class temperature {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    double f,c;
    Scanner sc=new Scanner(System.in);
    System.out.println("choose type of converstion: \n 1.F to C \n 2.C to F");
    int ch=sc.nextInt();
    
    switch(ch)
    {case 1: System.out.println("enter F temperature:");
             f=sc.nextDouble();
             c=(f-32)*5/9;
             System.out.println("celsius temperature : "+c);
             break;
             
    case 2: System.out.println("enter C temperature: ");
            c=sc.nextDouble();
            f=((9*c)/5)+32;
            System.out.println("Fahrentine temperature : "+f);
            break;
    }
  }
}
